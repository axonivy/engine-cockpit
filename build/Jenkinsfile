pipeline {
  agent any

  options {
    buildDiscarder(logRotator(numToKeepStr: '60', artifactNumToKeepStr: '5'))
  }

  triggers {
    cron '@midnight'
  }

  parameters {
    string(name: 'engineSource', defaultValue: 'https://jenkins.ivyteam.io/job/core_product/job/kingfisher/', description: 'Engine page url')
  }

  stages {
    stage('check editorconfig') {
      steps {
        script {
          docker.image('mstruebing/editorconfig-checker').inside {
            warnError('There are some editor errors') {
              sh 'ec -no-color'
            } 
          }
        }
      }
    }

    stage('build') {
      steps {
        script {
          def common = load 'build/build.groovy'
          common.build();
          archiveArtifacts '**/target/engine-cockpit-*.iar, **/target/engine-cockpit-*.jar'
          common.recordMavenIssues();
        }
      }
    }
  }
}
