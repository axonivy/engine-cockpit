<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy</groupId>
	<artifactId>engine-cockpit-config</artifactId>
	<version>${revision}</version>
	<packaging>pom</packaging>

	<properties>
		<nexus.root.url>http://zugpronexus:8081/nexus</nexus.root.url>
		<engine.page.url>https://jenkins.ivyteam.io/job/ivy-core_product/job/master/lastSuccessfulBuild/</engine.page.url>
		<engine.dir>../.ivy-engine</engine.dir>
		<revision>8.0.1-SNAPSHOT</revision>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<version>8.0.1</version>
				<extensions>true</extensions>
				<configuration>
					<ivyVersion>[8.0.0,]</ivyVersion>
					<engineListPageUrl>${engine.page.url}</engineListPageUrl>
                    <engineDirectory>${engine.dir}</engineDirectory>
					<skipScriptValidation>false</skipScriptValidation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>flatten-maven-plugin</artifactId>
				<version>1.1.0</version>
				<executions>
					<execution>
					  <id>flatten</id>
					  <phase>process-resources</phase>
					  <goals>
						<goal>flatten</goal>
					  </goals>
					</execution>
					<execution>
					  <id>flatten.clean</id>
					  <phase>clean</phase>
					  <goals>
						<goal>clean</goal>
					  </goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>zugpronexus.releases</id>
			<name>Internal Release Repository</name>
			<url>${nexus.root.url}/content/repositories/build-releases/</url>
		</repository>
		<snapshotRepository>
			<id>zugpronexus.snapshots</id>
			<name>Internal Build Integration Repository</name>
			<url>${nexus.root.url}/content/repositories/build-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<id>zugpronexus.build</id>
			<name>Internal Build Repository</name>
			<url>${nexus.root.url}/content/groups/build</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</repository>
	</repositories>

	<pluginRepositories>
		<!-- Used to install ivy maven plugins -->
		<pluginRepository>
			<id>zugpronexus.build-plugins</id>
			<name>Internal Plugin Build Integration Repository</name>
			<url>${nexus.root.url}/content/groups/build-plugins/</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
</project>
